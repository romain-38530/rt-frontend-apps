# Server Configuration
PORT=3017
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/rt-supplier

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Email Configuration (AWS SES)
SMTP_HOST=email-smtp.eu-central-1.amazonaws.com
SMTP_PORT=587
SMTP_USER=your-ses-smtp-user
SMTP_PASSWORD=your-ses-smtp-password

# Email Addresses
EMAIL_FROM=commande@symphonia-controltower.com
EMAIL_INVITATION=invitation@symphonia-controltower.com
EMAIL_COMMANDE=commande@symphonia-controltower.com
EMAIL_SUPPORT=support@symphonia-controltower.com

# External APIs
API_TRACKING_URL=http://localhost:3010
API_ORDERS_URL=http://localhost:3003
API_AUTH_URL=http://localhost:3001
API_EVENTS_URL=http://localhost:3005

# Frontend URLs
SUPPLIER_PORTAL_URL=http://localhost:3000/supplier
INDUSTRIAL_PORTAL_URL=http://localhost:3000/industrial

# QR Code Configuration
QR_CODE_SECRET=your-qr-code-secret-key

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
