commands:
  01_install_chrome:
    command: |
      if ! command -v google-chrome-stable &> /dev/null; then
        curl -o /tmp/google-chrome-stable.rpm https://dl.google.com/linux/direct/google-chrome-stable_current_x86_64.rpm
        dnf install -y /tmp/google-chrome-stable.rpm || yum install -y /tmp/google-chrome-stable.rpm
        rm -f /tmp/google-chrome-stable.rpm
      fi
    ignoreErrors: true
