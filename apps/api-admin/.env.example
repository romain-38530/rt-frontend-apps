# ===========================================
# RT Admin API - Variables d'environnement
# ===========================================

# Application
NODE_ENV=development
PORT=3020
APP_VERSION=3.0.0

# MongoDB
MONGODB_URI=mongodb://localhost:27017/rt-admin

# JWT (en production, utiliser AWS Secrets Manager)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Redis (optionnel - pour rate limiting et queues)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS (pour Secrets Manager, SES, CloudWatch)
AWS_REGION=eu-west-3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SECRETS_NAME=rt-admin-api/secrets

# Sentry (optionnel - pour tracking d'erreurs)
SENTRY_DSN=

# CloudWatch (optionnel - pour logs centralis√©s)
CLOUDWATCH_ENABLED=false
CLOUDWATCH_LOG_GROUP=rt-admin-api
CLOUDWATCH_METRICS_ENABLED=false

# Email (AWS SES)
SES_FROM_EMAIL=noreply@rt-technologie.com

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_ORIGINS=

# B2PWeb (pour scraping - en production, utiliser Secrets Manager)
B2PWEB_EMAIL=
B2PWEB_PASSWORD=

# Chrome/Puppeteer
CHROME_PATH=/usr/bin/google-chrome-stable

# Logging
LOG_LEVEL=info

# Frontend URLs
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3020
