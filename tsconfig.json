{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "RT Technologie - Base Configuration",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "paths": {
      "@rt/contracts": ["./packages/contracts/src/index.ts"],
      "@rt/ui-components": ["./packages/ui-components/src/index.ts"],
      "@rt/utils": ["./packages/utils/index.ts"],
      "@rt/shared": ["./packages/shared/index.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/node_modules", "dist", "**/dist", ".next", "**/.next"]
}
